<% content_for :title { 'Customers' } %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th># of Orders</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to(customer.full_name, customer_path(customer.id)) %>
        <td><%= customer.orders_count %>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= link_to('next page', customers_path(page: @current_page.to_i + 1)) %>
